<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="app-container">
      <!-- Sidebar -->
      <%- include('partials/sidebar') %>

      <!-- Main content -->
      <main class="main">
        <div class="top-bar">
          <img src="/img/profile_user.jpg" alt="profile" class="profile-img" />
        </div>

        <!-- Top Summary First -->
        <div class="summary">
          <div class="card">
            <h4>Total Expense</h4>
            <h2>
              <%= (typeof totalSpending === 'number' ? totalSpending.toFixed(2)
              : '0.00') %> Ïõê
            </h2>
            <p>Profit is 48% more than last Month</p>
            <div class="progress">
              <div class="progress-bar" style="width: 80%"></div>
            </div>
          </div>
          <div class="card">
            <h4>Track Instantly</h4>
            <p>Register new spending right now</p>
            <a href="/input" class="add-now">+ Add Expense</a>
          </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="dashboard-card">
          <div class="card-box">
            <div class="card-icon">üí∏</div>
            <div class="card-title">Total Spending</div>
            <div class="card-value"><%= totalSpending || 0 %> Ïõê</div>
            <div class="card-change">+10% from yesterday</div>
          </div>
          <div class="card-box">
            <div class="card-icon">üí∞</div>
            <div class="card-title">Total Transaction</div>
            <div class="card-value"><%= totalTransaction || 0 %></div>
            <div class="card-change">+8% from yesterday</div>
          </div>
          <div class="card-box">
            <div class="card-icon">üò¢</div>
            <div class="card-title">Emotional Spends</div>
            <div class="card-value"><%= emotionalSpends || 0 %></div>
            <div class="card-change">+2% from yesterday</div>
          </div>
          <div class="card-box">
            <div class="card-icon">üÜï</div>
            <div class="card-title">New Categories</div>
            <div class="card-value"><%= newCategories || 0 %></div>
            <div class="card-change">+3% from yesterday</div>
          </div>
        </div>

        <!-- Chart Section -->
        <div class="summary">
          <div class="card">
            <h3>Spending Insight</h3>
            <canvas id="spendingChart"></canvas>
          </div>
          <div class="card">
            <h3>Monthly Report</h3>
            <canvas id="monthlyReport"></canvas>
          </div>
        </div>

        <!-- Top Categories Table -->
        <section class="history">
          <h3>Top Spending Categories</h3>
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Category</th>
                <th>Share</th>
                <th>Sales</th>
              </tr>
            </thead>
            <tbody>
              <% if (!topCategories || topCategories.length === 0) { %>
              <tr>
                <td colspan="4">No category data.</td>
              </tr>
              <% } else { %> <% topCategories.forEach((cat, index) => { %>
              <tr>
                <td><%= (index + 1).toString().padStart(2, '0') %></td>
                <td><%= cat.category %></td>
                <td>
                  <div class="bar" style="width: <%= cat.share || 0 %>%">
                    <%= cat.share || 0 %>%
                  </div>
                </td>
                <td><%= cat.sales || '0 Ïõê' %></td>
              </tr>

              <% }); %> <% if (topCategories.length < 3) { %> <% for (let i =
              topCategories.length; i < 3; i++) { %>
              <tr>
                <td><%= (i + 1).toString().padStart(2, '0') %></td>
                <td colspan="3" style="color: #aaa; font-style: italic">
                  No category data.
                </td>
              </tr>
              <% } %> <% } %> <% } %>
            </tbody>
          </table>
        </section>
      </main>
    </div>

    <script>
      const spendingChart = document.getElementById('spendingChart').getContext('2d');
      new Chart(spendingChart, {
        type: 'bar',
        data: {
          labels: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
          datasets: [
            {
              label: 'Emotional Spending',
              data: <%- JSON.stringify(emotionalData || [0,0,0,0,0,0,0]) %>,
              backgroundColor: 'rgba(255, 99, 132, 0.8)'
            },
            {
              label: 'Total Spending',
              data: <%- JSON.stringify(totalData || [0,0,0,0,0,0,0]) %>,
              backgroundColor: 'rgba(54, 162, 235, 0.6)'
            }
          ]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });

      const monthlyChart = document.getElementById('monthlyReport').getContext('2d');
      new Chart(monthlyChart, {
        type: 'line',
        data: {
          labels: <%- JSON.stringify(monthLabels || []) %>,
          datasets: [{
            label: 'Monthly Expense',
            data: <%- JSON.stringify(monthlyTotals || []) %>,
            fill: true,
            borderColor: '#51C2D5',
            tension: 0.4
          }]
        }
      });
    </script>
  </body>
</html>
